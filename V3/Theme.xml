<BloxstrapCustomBootstrapper Version="1" Height="320" Width="520" IgnoreTitleBarInset="True" Theme="Dark" Margin="0">
    <TitleBar Title="" ShowMinimize="False" ShowClose="False"/>
    <BloxstrapCustomBootstrapper.Background>
        <ImageBrush ImageSource="theme://background.png" Stretch="UniformToFill"/>
    </BloxstrapCustomBootstrapper.Background>
    <Grid>
        <Rectangle Fill="#99000000" Width="520" Height="320"/>
        
        <Border Width="0" Height="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,-30,0"
                Background="#159C27B0"
                CornerRadius="75"/>
        
        <Border Width="0" Height="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,0,0,50"
                Background="#159C27B0"
                CornerRadius="50"/>
        
        <Grid>
            <StackPanel Width="250" 
                        Margin="30,40,0,60"
                        VerticalAlignment="Center">
                <Border Width="60" 
                        Height="60" 
                        CornerRadius="15" 
                        Background="#15FFFFFF"
                        Margin="0,0,0,15">
                    <Image Source="{Icon}" 
                           Width="45" 
                           Height="45"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Roblox" 
                         FontSize="24"
                         FontFamily="Segoe UI"
                         FontWeight="Bold" 
                         Foreground="#FFFFFF"/>
            </StackPanel>
        </Grid>

        <Border Height="4" 
                Width="520"
                VerticalAlignment="Bottom" 
                Background="#15FFFFFF">
            <ProgressBar Height="4" 
                       Name="PrimaryProgressBar" 
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,0"
                       Foreground="#0080FF" 
                       Background="Transparent"/>
        </Border>

        <Button Content="Cancel" 
                Name="CancelButton" 
                Height="32" 
                Width="90" 
                Margin="0,0,25,25"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#20FFFFFF" 
                Foreground="#FFFFFF" 
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</BloxstrapCustomBootstrapper> 